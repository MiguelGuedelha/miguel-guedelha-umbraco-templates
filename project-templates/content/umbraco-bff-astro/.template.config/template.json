{
  "$schema": "https://json.schemastore.org/template",
  "author": "miguelguedelha",
  "classifications": [
    "AspNetCore",
    "Web",
    "Cloud",
    "Solution",
    "Umbraco",
    "API",
    "Headless"
  ],
  "name": "Umbraco Website BFF API and Astro",
  "defaultName": "UmbracoBFFAstro",
  "description": "A template containing a baseline set of 3 deployable services. A Umbraco Site with Delivery API enabled, a BFF layer API and an Astro Frontend. It also includes pre-baked in features, such as caching and load balancing",
  "guids": [
    "96428842-b8ff-46d1-aa2f-dbf284cb7d6a"
  ],
  "identity": "MiguelGuedelha.UmbracoBFFAstro",
  "preferNameDirectory": true,
  "primaryOutputs": [
    {
      "path": "UmbracoBFFAstro.Aspire/UmbracoBFFAstro.Aspire.sln"
    }
  ],
  "shortName": "umbraco-bff-astro",
  "sourceName": "UmbracoBFFAstro",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/appsettings-schema*",
        "**/*lock.json",
        "**/*lock.yaml",
        "**/App_Plugins/**",
        "**/[Uu]mbraco/**",
        "**/uSync/**",
        "**/*.bundle.js*",
        "**/node_modules/**",
        "**/dist/**",
        "**/.astro/**",
        "**/.vscode/launch.json",
        "**/dist"
      ],
      "modifiers": []
    }
  ],
  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "GeneratedClassNamePrefix": {
      "type": "generated",
      "generator": "regex",
      "datatype": "string",
      "replaces": "GeneratedClassNamePrefix",
      "parameters": {
        "source": "name",
        "steps": [
          {
            "regex": "(((?<=\\.)|^)(?=\\d)|\\W)",
            "replacement": "_"
          }
        ]
      }
    }
  },
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "id": "restore",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}