{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": "Information"
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Smtp": {
          "From": "no-reply@localhost",
          "Host": "localhost"
        }
      },
      "ModelsBuilder": {
        "ModelsMode": "SourceCodeAuto",
        "AcceptUnsafeModelsDirectory": true,
        "ModelsDirectory": "~/Common/UmbracoModels",
        "ModelsNamespace": "UmbracoBFFAstro.Cms.Web.Common.UmbracoModels"
      },
      "Unattended": {
        "InstallUnattended": true,
        "UnattendedUserEmail": "admin@admin.com",
        "UnattendedUserPassword": "Password123!",
        "UnattendedUserName": "admin"
      }
    },
    "Storage": {
      "AzureBlob": {
        "Media": {
          "ContainerName": "umbraco-local-media"
        }
      }
    }
  }
}
