{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{CorrelationId}] {SourceContext} - {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Smtp": {
          "From": "no-reply@localhost",
          "Host": "localhost"
        }
      },
      "ModelsBuilder": {
        "ModelsMode": "SourceCodeAuto",
        "AcceptUnsafeModelsDirectory": true,
        "ModelsDirectory": "~/../UmbracoTemplate.Umbraco.Models",
        "ModelsNamespace": "UmbracoTemplate.Umbraco.Models",
        "FlagOutOfDateModels": true
      },
      "Unattended": {
        "InstallUnattended": true,
        "UnattendedUserEmail": "admin@admin.com",
        "UnattendedUserPassword": "Password123!",
        "UnattendedUserName": "admin"
      }
    }
  },
  "uSync": {
    "Settings": {
      "ExportOnSave": "Settings"
    }
  }
}
