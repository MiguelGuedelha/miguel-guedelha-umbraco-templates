{
  "$schema": "appsettings-schema.json",
  "ConnectionStrings": {
    "Cache": "from-secrets"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] [Correlation Id: {CorrelationId}] {SourceContext} - {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "WithProcessId",
      "WithThreadId",
      {
        "Name": "WithCorrelationId",
        "Args": {
          "addValueIfHeaderAbsence": true
        }
      },
      "WithClientIp",
      "FromLogContext",
      "WithExceptionDetails"
    ]
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "eb281fdb-b0b5-41ab-a107-dd0a655c514f",
        "SanitizeTinyMce": true
      },
      "ModelsBuilder": {
        "ModelsMode": "Nothing"
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        },
        "MacroErrors": "Throw"
      },
      "Hosting": {
        "Debug": false
      },
      "DeliveryApi": {
        "Enabled": true,
        "RichTextOutputAsJson": true,
        "PublicAccess": false,
        "ApiKey": "from-secrets"
      },
      "Unattended": {
        "UpgradeUnattended": true
      },
      "RuntimeMinification": {
        "UseInMemoryCache": true,
        "CacheBuster": "Timestamp"
      },
      "Security": {
        "AllowConcurrentLogins": false
      },
      "WebRouting": {
        "DisableRedirectUrlTracking": true
      }
    }
  }
}