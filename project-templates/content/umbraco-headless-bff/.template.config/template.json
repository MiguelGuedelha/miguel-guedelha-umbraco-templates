{
  "$schema": "https://json.schemastore.org/template",
  "author": "Miguel Guedelha",
  "classifications": [
    "AspNetCore",
    "Web",
    "Cloud",
    "Solution",
    "Umbraco",
    "API",
    "Headless"
  ],
  "name": "Umbraco Website with BFF API",
  "defaultName": "UmbracoHeadlessBFF",
  "description": "A template containing a baseline set of 2 deployable services. A Umbraco Site with Delivery API enabled, and a BFF API. It also includes pre-baked in features, such as caching and load balancing",
  "guids": [
    "9cb15381-ae74-415a-985c-98e1f6e779ed", // UmbracoHeadlessBFF.SiteApi user-secrets
    "759145f7-38d6-4b5f-a862-55c536235b63", // UmbracoHeadlessBFF.Aspire user-secrets
    "eaa22c3c-81e2-4fcb-b013-093c372258c9", // UmbracoHeadlessBFF.Cms user-secrets
    "eb281fdb-b0b5-41ab-a107-dd0a655c514f" // Umbraco Global Id (appsettings.json)
  ],
  "identity": "MiguelGuedelha.UmbracoHeadlessBFF",
  "preferNameDirectory": true,
  "primaryOutputs": [
    {
      "path": "UmbracoHeadlessBFF.sln"
    }
  ],
  "shortName": "umbraco-headless-bff",
  "sourceName": "UmbracoHeadlessBFF",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**",
        "**/*.filelist",
        "**/*.user",
        "**/appsettings-schema*",
        "**/*lock.json",
        "**/App_Plugins/**",
        "**/uSync/**",
        "**/.vscode/**",
        "*.sh",
        "*.ps1",
        "k6.js"
      ],
      "include": [
        "**/*",
        "**/App_Plugins/HeadlessPreviewExtension/**"
      ],
      "modifiers": []
    }
  ],
  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "cmsHttpsPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 44300,
        "high": 44399
      },
      "replaces": "44300"
    },
    "siteApiHttpsPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 7000,
        "high": 7300
      },
      "replaces": "7000"
    },
    "appHostHttpsPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 17000,
        "high": 17300
      },
      "replaces": "17000"
    },
    "appHostOtlpHttpsPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 21000,
        "high": 21300
      },
      "replaces": "21000"
    },
    "appHostResourceHttpsPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 22000,
        "high": 22300
      },
      "replaces": "22000"
    },
    "mailServerHttpPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 35000,
        "high": 35999
      },
      "replaces": "35000"
    }
  },
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "id": "restore",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}